{
  "name": "@globalart/nestjs-grpc",
  "version": "1.0.0",
  "description": "A grpc modules for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-grpc"
  },
  "keywords": [
    "nestjs",
    "grpc"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "rm -rf ./dist && tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@nestjs/common": "11.1.10",
    "@nestjs/microservices": "11.1.10",
    "rxjs": "^7.8.1",
    "@nestjs/core": "11.1.10",
    "@nestjs/throttler": "6.5.0",
    "@nestjs/platform-socket.io": "11.1.10",
    "@nestjs/terminus": "11.0.0",
    "@grpc/reflection": "^1.0.4",
    "grpc-health-check": "^2.1.0"
  },
  "devDependencies": {
    "reflect-metadata": "^0.2.2",
    "release-it": "19.2.1",
    "tsdown": "0.18.3",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}
