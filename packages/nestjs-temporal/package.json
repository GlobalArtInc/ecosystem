{
  "name": "@globalart/nestjs-temporal",
  "description": "Temporal integration for NestJS",
  "version": "1.1.5",
  "type": "module",
  "main": "dist/index.mjs",
  "module": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-temporal"
  },
  "license": "MIT",
  "author": "GlobalArt, Inc",
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "nestjs",
    "temporal"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@nestjs/common": "11.1.12",
    "@nestjs/core": "11.1.12",
    "@temporalio/activity": "^1.8.3",
    "@temporalio/client": "^1.8.3",
    "@temporalio/common": "^1.8.3",
    "@temporalio/worker": "^1.8.3",
    "@temporalio/workflow": "^1.8.3",
    "lodash": "^4.17.21",
    "rxjs": "^7.8.2"
  },
  "devDependencies": {
    "@types/node": "25.0.9",
    "reflect-metadata": "^0.2.2",
    "release-it": "19.2.4",
    "tsdown": "0.20.0-beta.4",
    "typescript": "^5.9.3"
  }
}
