{
  "name": "@globalart/nestjs-fastify",
  "version": "2.0.3",
  "description": "A fastify for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main"
  },
  "keywords": [
    "nestjs",
    "fastify"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "rm -rf ./dist && tsdown && cp src/globals.d.ts dist/",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@fastify/cookie": "11.0.2",
    "@fastify/multipart": "9.3.0",
    "@nestjs/common": "11.1.11",
    "@nestjs/core": "11.1.11",
    "@nestjs/microservices": "11.1.11",
    "@nestjs/platform-fastify": "11.1.11",
    "@nestjs/swagger": "^11.2.3",
    "@nestjs/testing": "11.1.11",
    "@nestjs/typeorm": "^11.0.0",
    "class-validator": "0.14.3",
    "fastify": "^5.6.2"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/node": "25.0.3",
    "class-validator": "0.14.3",
    "coveralls": "^3.1.1",
    "jest": "^30.2.0",
    "prettier": "3.7.4",
    "reflect-metadata": "^0.2.2",
    "release-it": "19.2.2",
    "rxjs": "^7.8.2",
    "ts-jest": "29.4.6",
    "ts-node": "^10.9.2",
    "tsdown": "0.19.0-beta.3",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
