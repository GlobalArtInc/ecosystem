{
  "name": "@globalart/nestjs-schematics",
  "version": "1.0.0",
  "description": "A schematics modules for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "files": [
    "dist/**/*"
  ],
  "main": "./dist/index.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-schematics"
  },
  "keywords": [
    "nestjs",
    "schematics"
  ],
  "scripts": {
    "postbuild": "npm run copy:collection && npm run copy:lib",
    "build": "rm -rf dist && tsc --project tsconfig.lib.json",
    "clean": "gulp clean:src",
    "copy:collection": "cpx src/collection.json dist && cpx 'src/lib/**/schema.json' dist/lib",
    "copy:lib": "cpx 'src/lib/**/{files,workspace}/**/*.*' dist/lib && cpx 'src/lib/**/{files,workspace}/**/.!(gitignore)' dist/lib",
    "lint": "eslint '{src,test}/**/*.ts' --fix",
    "prepublish:next": "npm run build",
    "publish:next": "npm publish --access public --tag next",
    "prepublish:npm": "npm run build",
    "test": "npm run clean && NODE_ENV=test jest -w 1 --no-cache --config jest.json",
    "test:dev": "NODE_ENV=test npm run -s test -- --watchAll",
    "prerelease": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@angular-devkit/core": "21.1.0",
    "@angular-devkit/schematics": "21.1.0",
    "@nestjs/common": "11.1.12",
    "@nestjs/core": "11.1.12",
    "@nestjs/terminus": "11.0.0",
    "@nestjs/throttler": "6.5.0",
    "comment-json": "4.5.1",
    "jsonc-parser": "3.3.1"
  },
  "devDependencies": {
    "@types/node": "^25.0.3",
    "cpx2": "8.0.0",
    "reflect-metadata": "^0.2.2",
    "release-it": "19.2.3",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  },
  "schematics": "./dist/collection.json"
}
