{
  "name": "@globalart/nestjs-schematics",
  "version": "1.0.0",
  "description": "A schematics modules for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-schematics"
  },
  "keywords": [
    "nestjs",
    "schematics"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "rm -rf ./dist && tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@angular-devkit/core": "19.2.17",
    "@angular-devkit/schematics": "19.2.17",
    "@nestjs/common": "11.1.11",
    "@nestjs/core": "11.1.11",
    "@nestjs/terminus": "11.0.0",
    "@globalart/nestjs-zod": "1.0.0",
    "@nestjs/throttler": "6.5.0"
  },
  "devDependencies": {
    "reflect-metadata": "^0.2.2",
    "release-it": "19.2.2",
    "tsdown": "0.19.0-beta.2",
    "typescript": "^5.9.3",
    "@types/node": "^25.0.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
