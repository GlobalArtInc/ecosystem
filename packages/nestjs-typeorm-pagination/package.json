{
  "name": "@globalart/nestjs-typeorm-pagination",
  "version": "1.0.17",
  "author": "GlobalArt, Inc",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "description": "Pagination and filtering helper method for TypeORM repostiories or query builders using Nest.js framework.",
  "repository": {
    "type": "git",
    "url": "https://github.com/GlobalArtInc/ecosystem/tree/main/packages/nestjs-typeorm-pagination"
  },
  "keywords": [
    "nestjs",
    "typeorm",
    "express",
    "pagination",
    "paginate",
    "filtering",
    "search"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "scripts": {
    "prebuild": "rimraf lib",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepare": "tsc",
    "dev:yalc": "nodemon --watch src --ext ts --exec 'npm run build && yalc push'",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:ci": "prettier --list-different \"src/**/*.ts\"",
    "lint": "eslint -c .eslintrc.json --ext .ts --max-warnings 0 src",
    "test": "jest --passWithNoTests",
    "prepublish:npm": "npm run build",
    "publish:npm": "release-it --config ../../.release-it.json",
    "prepublish:dev": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand"
  },
  "devDependencies": {
    "@nestjs/common": "catalog:dev",
    "@nestjs/typeorm": "catalog:dev",
    "@types/express": "catalog:dev",
    "@types/jest": "catalog:dev",
    "@types/lodash": "catalog:dev",
    "@types/node": "catalog:dev",
    "@typescript-eslint/eslint-plugin": "catalog:dev",
    "@typescript-eslint/parser": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-config-prettier": "catalog:dev",
    "eslint-plugin-prettier": "catalog:dev",
    "fastify": "catalog:dev",
    "jest": "catalog:dev",
    "pg": "catalog:dev",
    "prettier": "catalog:dev",
    "reflect-metadata": "catalog:dev",
    "release-it": "catalog:dev",
    "rxjs": "catalog:dev",
    "sqlite3": "catalog:dev",
    "ts-jest": "catalog:dev",
    "ts-node": "catalog:dev",
    "tsdown": "catalog:dev",
    "typeorm": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "dependencies": {
    "@globalart/nestjs-zod": "catalog:prod",
    "@nestjs/swagger": "catalog:prod",
    "class-transformer": "catalog:prod",
    "class-validator": "catalog:prod",
    "lodash": "catalog:prod",
    "zod": "catalog:prod"
  },
  "peerDependencies": {
    "@nestjs/typeorm": "^11.0.0",
    "typeorm": "^0.3.0"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "publishConfig": {
    "access": "public"
  },
  "release": {
    "branches": [
      "master"
    ]
  },
  "optionalDependencies": {}
}