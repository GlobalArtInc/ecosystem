{
  "name": "@globalart/nestjs-zod",
  "description": "All NestJS + Zod utilities you need",
  "version": "1.0.0",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-zod"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "GlobalArt, Inc",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "^0.3.3",
    "@nestjs/common": "^11.1.5",
    "@nestjs/core": "^11.1.5",
    "@nestjs/swagger": "^11.2.0",
    "@nestjs/testing": "^11.1.5",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.2",
    "@types/lodash": "^4.17.19",
    "@types/merge-deep": "^3.0.0",
    "@types/node": "^22.7.5",
    "@types/supertest": "^6.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "release-it": "19.0.6",
    "esbuild": "^0.14.24",
    "eslint": "^8.42.0",
    "eslint-kit": "^5.7.0",
    "express": "^5.1.0",
    "jest": "^29.5.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "supertest": "^7.1.3",
    "ts-jest": "^29.1.0",
    "typescript": "5.7.2",
    "tsdown": "0.16.6",
    "zod": "^4.0.5"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/swagger": "^7.4.2 || ^8.0.0 || ^11.0.0",
    "rxjs": "^7.0.0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/swagger": {
      "optional": true
    }
  },
  "dependencies": {
    "deepmerge": "^4.3.1"
  }
}
