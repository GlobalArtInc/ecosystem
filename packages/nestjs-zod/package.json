{
  "name": "@globalart/nestjs-zod",
  "description": "All NestJS + Zod utilities you need",
  "version": "1.0.0",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-zod"
  },
  "sideEffects": false,
  "license": "MIT",
  "author": "GlobalArt, Inc",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "devDependencies": {
    "@golevelup/ts-jest": "catalog:dev",
    "@nestjs/common": "catalog:dev",
    "@nestjs/core": "catalog:dev",
    "@nestjs/swagger": "catalog:dev",
    "@nestjs/testing": "catalog:dev",
    "@types/express": "catalog:dev",
    "@types/jest": "catalog:dev",
    "@types/lodash": "catalog:dev",
    "@types/merge-deep": "catalog:dev",
    "@types/node": "catalog:dev",
    "@types/supertest": "catalog:dev",
    "class-transformer": "catalog:dev",
    "class-validator": "catalog:dev",
    "esbuild": "catalog:dev",
    "eslint": "catalog:dev",
    "eslint-kit": "catalog:dev",
    "express": "catalog:dev",
    "jest": "catalog:dev",
    "lodash": "catalog:dev",
    "reflect-metadata": "catalog:dev",
    "release-it": "catalog:dev",
    "rxjs": "catalog:dev",
    "supertest": "catalog:dev",
    "ts-jest": "catalog:dev",
    "tsdown": "catalog:dev",
    "typescript": "catalog:dev",
    "zod": "catalog:dev"
  },
  "peerDependencies": {
    "@nestjs/common": "^10.0.0 || ^11.0.0",
    "@nestjs/swagger": "^7.4.2 || ^8.0.0 || ^11.0.0",
    "rxjs": "^7.0.0",
    "zod": "^3.25.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "@nestjs/swagger": {
      "optional": true
    }
  },
  "dependencies": {
    "deepmerge": "catalog:prod"
  },
  "optionalDependencies": {}
}