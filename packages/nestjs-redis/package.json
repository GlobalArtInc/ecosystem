{
  "name": "@globalart/nestjs-redis",
  "version": "1.0.0",
  "description": "A redis modules for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main",
    "directory": "packages/nestjs-redis"
  },
  "keywords": [
    "nestjs",
    "redis"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "rm -rf ./dist && tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@nestjs/common": "11.1.9",
    "@nestjs/core": "^11.1.9",
    "redis": "^5.10.0",
    "@nestjs/throttler": "^6.4.0",
    "@nestjs/platform-socket.io": "11.1.9",
    "@nestjs/terminus": "11.0.0",
    "@socket.io/redis-adapter": "^8.3.0"
  },
  "devDependencies": {
    "reflect-metadata": "^0.2.2",
    "release-it": "19.0.6",
    "tsdown": "0.17.0",
    "typescript": "^5.9.3"
  },
  "publishConfig": {
    "access": "public"
  }
}
