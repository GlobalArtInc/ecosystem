{
  "name": "@globalart/nestjs-microservices",
  "version": "1.0.3",
  "description": "A simple microservices builder for NestJS",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main"
  },
  "keywords": [
    "nestjs",
    "microservices"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "dependencies": {
    "@nestjs/common": "catalog:prod",
    "@nestjs/core": "catalog:prod",
    "@nestjs/microservices": "catalog:prod",
    "@nestjs/swagger": "catalog:prod",
    "@nestjs/testing": "catalog:prod",
    "@nestjs/typeorm": "catalog:prod",
    "mysql": "catalog:prod"
  },
  "devDependencies": {
    "@types/jest": "catalog:dev",
    "@types/node": "catalog:dev",
    "coveralls": "catalog:dev",
    "jest": "catalog:dev",
    "prettier": "catalog:dev",
    "reflect-metadata": "catalog:dev",
    "release-it": "catalog:dev",
    "rxjs": "catalog:dev",
    "ts-jest": "catalog:dev",
    "ts-node": "catalog:dev",
    "tsdown": "catalog:dev",
    "typeorm": "catalog:dev",
    "typescript": "catalog:dev"
  },
  "jest": {
    "coveragePathIgnorePatterns": [
      "src/__tests__"
    ],
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage"
  },
  "publishConfig": {
    "access": "public"
  },
  "peerDependencies": {},
  "optionalDependencies": {}
}