{
  "name": "@globalart/oxide",
  "version": "1.0.0",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.js",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": "./dist/index.js",
    "./package.json": "./package.json"
  },
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm publish --access public --tag dev",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "keywords": [
    "oxide",
    "rust"
  ],
  "description": "A simple toolkit for building scalable and maintainable applications",
  "devDependencies": {
    "@types/node": "^24.9.1",
    "typescript": "^5.9.3",
    "release-it": "19.0.5",
    "tsdown": "0.16.0",
    "prettier": "^3.6.2"
  },
  "publishConfig": {
    "access": "public"
  }
}
