{
  "name": "@globalart/ddd",
  "version": "1.1.2",
  "description": "Advanced Domain-Driven Design",
  "author": {
    "name": "GlobalArt, Inc"
  },
  "license": "MIT",
  "type": "module",
  "files": [
    "dist",
    "templates",
    "README.md",
    "LICENSE"
  ],
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.cts",
  "exports": {
    ".": {
      "import": {
        "types": "./dist/index.d.mts",
        "default": "./dist/index.mjs"
      },
      "require": {
        "types": "./dist/index.d.cts",
        "default": "./dist/index.cjs"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/GlobalArtInc/ecosystem.git#main"
  },
  "keywords": [
    "ddd"
  ],
  "scripts": {
    "format": "prettier --write \"**/*.ts\"",
    "test": "jest --runInBand --passWithNoTests",
    "test:cov": "jest --coverage --passWithNoTests",
    "coveralls": "yarn run test:cov --coverageReporters=text-lcov | coveralls",
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "prepublishOnly": "npm run build",
    "publish:dev": "npm version prerelease --preid=dev && npm publish --tag dev --access public",
    "publish:npm": "release-it --config ../../.release-it.json"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@globalart/oxide": "1.0.0",
    "date-fns": "4.1.0",
    "dequal": "2.0.3",
    "nanoid": "5.1.6",
    "prettier": "3.7.4",
    "ts-pattern": "5.9.0",
    "uuid": "13.0.0",
    "zod": "4.3.5"
  },
  "devDependencies": {
    "release-it": "19.2.3",
    "tsdown": "0.19.0-beta.3"
  }
}
